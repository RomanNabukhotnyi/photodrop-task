{
    "compilerOptions": {
      "strict": true,
      "noImplicitAny": true,
      "strictNullChecks": true,
      "strictFunctionTypes": true,  
      "strictPropertyInitialization": true,
      "noImplicitThis": true,
      "alwaysStrict": true,
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "noImplicitReturns": true,
      "noFallthroughCasesInSwitch": true,
      "allowSyntheticDefaultImports": true,
      "lib": ["ESNext"],
      "module": "commonjs",
      "esModuleInterop": true,
      "moduleResolution": "node",
      "removeComments": true,
      "sourceMap": true,
      "target": "ES2022",
      "baseUrl": ".",
    },
    "include": ["src/**/*.ts", "serverless.ts", "webpack.config.ts"],
    "exclude": [
      "node_modules/**/*",
      ".serverless/**/*",
      ".webpack/**/*",
      ".vscode/**/*"
    ],
    "ts-node": {
      "require": ["tsconfig-paths/register"]
    }
  }