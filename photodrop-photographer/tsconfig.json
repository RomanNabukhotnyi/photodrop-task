{
    "compilerOptions": {
      "lib": ["ES2015"],
      "module": "commonjs",
      "esModuleInterop": true,
      "moduleResolution": "node",
      "removeComments": true,
      "target": "ES5",
      "baseUrl": "."
    },
    "include": ["src/**/*.ts"],
    "exclude": [
      "node_modules/**/*",
      ".serverless/**/*",
      ".vscode/**/*"
    ],
    "ts-node": {
      "require": ["tsconfig-paths/register"]
    }
  }